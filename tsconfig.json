{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"target": "ES6"
	},
	"include": [
		"./src/**/*"
	]
}
